pipeline{
    agent any

    environment{
        NODE_VERSION = '20.x'
    }
    tools{
        nodejs "${NODE_VERSION}"
    }
    stages{
        stage('Checkout'){
            steps{
                git branch: "main", url: 'https://github.com/CooLVasileff/StudentRegistryApp'
            }
        }
        stage('Install Dependencies'){
            steps{
                script{
                        bat 'npm install'
                }
            }
        }
        stage('Start App and run tests'){
            steps{
                script{
                    bat 'npm start &'
                    bat 'wait-on http://localhost:9091'
                    bat 'test'
                }
            }
        }
    }

    post {
        always{
            echo "CI Pipline Completed"
        }
    }
}