pipeline{
    agent any

    environment{
        NODE_VERSION = '20.x'
    }
    tools{
        nodejs "${NODE_VERSION}"
    }
    stages{
        stage('Checkout'){
            steps{
                Checkout scm
            }
        }
        stage('Install Dependencies'){
            steps{
                script{
                    if(isUnix()){
                        sh 'npm install'
                    }
                    else{
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Start App and run tests'){
            steps{
                script{
                    sh 'npm start &'
                    sh 'wait-on http://localhost:9091'
                    sh 'test'
                }
            }
        }
    }

    post {
        always{
            echo "CI Pipline Completed"
        }
    }
}